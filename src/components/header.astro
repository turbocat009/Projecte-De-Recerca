<header>
    <nav id="main-nav">
        <a href="/"><img src="/favicon.svg" alt="Logo del web" /></a>
        <button class="mobileOnly">
            <div></div>
            <div></div>
        </button>
        <ul class="desktopOnly">
            <li><a class="inici" href="/">Inici</a></li>
            <li><a class="art" href="/art">Art</a></li>
        </ul>
    </nav>
    <ul class="mobileOnly mobile-menu">
        <li><a class="inici" href="/">Inici</a></li>
        <li><a class="art" href="/art">Art</a></li>
    </ul>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 8rem;
        box-shadow: 0px 0px 1px rgba(0, 0, 0, 1);
        width: 100%;
        background-color: white;
        transition: all 0.5s;
    }

    nav img {
        height: 40px;
        width: 40px;
    }

    button {
        border: 1px solid rgb(70, 70, 70);
        border-radius: 100%;
        background-color: rgba(255, 255, 255, 0.9);
        padding: 1rem;
        gap: 0.5rem;
    }

    button div {
        width: 20px;
        height: 2px;
        background-color: rgb(62, 62, 62);
        margin: 5px 0;
        transition: all 0.3s ease;
    }

    button.open div:nth-child(1) {
        transform: rotate(45deg) translate(2.5px, 2.5px);
    }
    button.open div:nth-child(2) {
        transform: rotate(-45deg) translate(2.5px, -2.5px);
    }

    ul {
        list-style: none;
        display: flex;
        flex-direction: row;
        gap: 2rem;
    }

    a {
        color: black;
        text-decoration: none;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

    a:hover {
        opacity: 0.5;
    }

    nav.scrolled {
        animation: smallHeader 0.75s forwards;
    }

    .selected {
        color: rgb(255, 144, 17);
    }

    .mobileOnly {
        display: none;
    }

    @media (max-width: 768px) {
        nav {
            width: 70%;
            border-radius: 50px;
            backdrop-filter: blur(25px);
            position: fixed;
            margin-top: 15px;
            background-color: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: none;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        }

        .mobileOnly {
            display: block;
            cursor: pointer;
        }

        .desktopOnly {
            display: none;
        }

        .mobile-menu {
            position: fixed;
            top: 80px;
            width: 70%;
            backdrop-filter: blur(50px);
            display: none;
            align-items: center;
        }

        .mobile-menu.open {
            position: fixed;
            top: 80px;
            text-align: center;
            width: 70%;
            border-radius: 50px;
            backdrop-filter: blur(25px);
            position: fixed;
            background-color: rgba(255, 255, 255, 0.2);
            padding: 2rem;
            display: flex;
            justify-content: space-between;
            flex-direction: column;
            align-items: center;
            transition: all 0.3s ease;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 2px 5px;
            border: none;
        }

        .selected {
            color: rgb(255, 144, 17);
        }
    }

    @media (prefers-color-scheme: dark) {
        nav {
            background-color: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(25px);
            color: white;
        }

        a {
            color: white;
        }

        a:hover {
            opacity: 0.7;
        }

        .mobile-menu {
            background-color: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(25px);
        }
    }

    @keyframes smallHeader {
        from {
            width: 100%;
            border-radius: 0;
            backdrop-filter: none;
            position: fixed;
            margin-top: 0;
            background-color: transparent;
            padding: 0;
        }
        to {
            width: 40%;
            border-radius: 50px;
            backdrop-filter: blur(25px);
            position: fixed;
            margin-top: 25px;
            background-color: rgba(255, 255, 255, 0.2);
            padding: 0.5rem 3rem;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        }
    }
</style>

<script>
    window.addEventListener("scroll", () => {
        const nav = document.getElementById("main-nav");
        if (nav === null) return;
        if (window.scrollY > 20) {
            nav.classList.add("scrolled");
        } else {
            nav.classList.remove("scrolled");
        }
    });

    const currentPath = window.location.pathname;
    switch (currentPath) {
        case "/":
            const iniciLinks = document.querySelectorAll(".inici");
            iniciLinks.forEach((link) => link.classList.add("selected"));
            break;
        case "/art":
            const artLinks = document.querySelectorAll(".art");
            artLinks.forEach((link) => link.classList.add("selected"));
            break;
        default:
            break;
    }

    const mobileMenuButton = document.querySelector("button.mobileOnly");
    const mobileMenu = document.querySelector("ul.mobile-menu");
    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener("click", () => {
            mobileMenu.classList.toggle("open");
            mobileMenuButton.classList.toggle("open");
        });
    }
</script>
