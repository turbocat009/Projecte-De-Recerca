<header>
    <nav id="main-nav">
        <a href="/"><img src="/svg/logo.svg" alt="Logo del web" /></a>
        <button class="mobileOnly">
            <div></div>
            <div></div>
        </button>
        <ul class="desktopOnly">
            <li><a class="inici" href="/">Inici</a></li>
            <li><a class="art" href="/art">Art</a></li>
            <li><a class="explore" href="/explore">Explora</a></li>
            <li><a class="artists" href="/artists">Artistes</a></li>
            <li><a class="about" href="/about">Sobre</a></li>
        </ul>
    </nav>
    <ul class="mobileOnly mobile-menu">
        <li><a class="inici" href="/">Inici</a></li>
        <li><a class="art" href="/art">Art</a></li>
    </ul>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 4rem;
        width: 100%;
        height: 100%;
        transition: all 0.5s;
        backdrop-filter: blur(25px);
        border-radius: 20px;
        position: relative;
    }

    nav img {
        height: 100px;
        width: 100px;
    }

    button.open div:nth-child(1) {
        transform: rotate(45deg) translate(2.5px, 2.5px);
    }
    button.open div:nth-child(2) {
        transform: rotate(-45deg) translate(2.5px, -2.5px);
    }

    ul {
        list-style: none;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2rem;
    }

    a {
        color: black;
        text-decoration: none;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        line-height: 16px;
        font-family:
            aktiv-grotesk-extended,
            Gill sans;
        font-weight: 500;
        align-self: center;
    }

    a:hover {
        opacity: 0.5;
    }

    .selected {
        color: rgb(255, 144, 17);
        border-bottom: 2px solid rgb(255, 144, 17);
    }

    .mobileOnly {
        display: none;
    }

    @media (max-width: 768px) {
        nav ul.desktopOnly {
            display: none;
        }
        nav button.mobileOnly {
            display: flex;
            flex-direction: column;
            gap: 5px;
            background: transparent;
            border: none;
            cursor: pointer;
        }
        nav button.mobileOnly div {
            width: 30px;
            height: 3px;
            background-color: black;
            transition: transform 0.3s ease;
        }
        .mobile-menu {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background-color: white;
            padding: 1rem;
            display: none;
            flex-direction: column;
        }
        .mobile-menu li {
            margin-bottom: 1rem;
        }
    }
</style>

<script>
    window.addEventListener("scroll", () => {
        const nav = document.getElementById("main-nav");
        if (nav === null) return;
        if (window.scrollY > 20) {
            nav.classList.add("scrolled");
        } else {
            nav.classList.remove("scrolled");
        }
    });

    const currentPath = window.location.pathname;
    switch (currentPath) {
        case "/":
            const iniciLinks = document.querySelectorAll(".inici");
            iniciLinks.forEach((link) => link.classList.add("selected"));
            break;
        case "/art/":
        case "/art":
            const artLinks = document.querySelectorAll(".art");
            artLinks.forEach((link) => link.classList.add("selected"));
            break;
        case "/explore/":
        case "/explore":
            const exploreLinks = document.querySelectorAll(".explore");
            exploreLinks.forEach((link) => link.classList.add("selected"));
            break;
        case "/artists/":
        case "/artists":
            const artistsLinks = document.querySelectorAll(".artists");
            artistsLinks.forEach((link) => link.classList.add("selected"));
            break;
        case "/about/":
        case "/about":
            const aboutLinks = document.querySelectorAll(".about");
            aboutLinks.forEach((link) => link.classList.add("selected"));
            break;
        default:
            break;
    }
</script>
