<header>
    <nav id="main-nav">
        <a href="/"><img src="/svg/icon" alt="Logo del web" /></a>
        <button class="mobileOnly">
            <div></div>
            <div></div>
        </button>
        <ul class="desktopOnly">
            <li><a class="inici" href="/">Inici</a></li>
            <li><a class="art" href="/art">Art</a></li>
        </ul>
    </nav>
    <ul class="mobileOnly mobile-menu">
        <li><a class="inici" href="/">Inici</a></li>
        <li><a class="art" href="/art">Art</a></li>
    </ul>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 4rem;
        width: 100%;
        height: 100%;
        background-color: #e9fad9;
        transition: all 0.5s;
        backdrop-filter: blur(25px);
        border-radius: 20px;
        position: relative;
    }

    nav img {
        height: 50px;
        width: 50px;
    }

    button.open div:nth-child(1) {
        transform: rotate(45deg) translate(2.5px, 2.5px);
    }
    button.open div:nth-child(2) {
        transform: rotate(-45deg) translate(2.5px, -2.5px);
    }

    ul {
        list-style: none;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2rem;
    }

    a {
        color: black;
        text-decoration: none;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        text-transform: uppercase;
        line-height: 16px;
        font-family:
            aktiv-grotesk-extended,
            Gill sans;
        font-weight: 500;
        align-self: center;
    }

    a:hover {
        opacity: 0.5;
    }

    .selected {
        color: rgb(255, 144, 17);
        border-bottom: 2px solid rgb(255, 144, 17);
    }

    .mobileOnly {
        display: none;
    }
</style>

<script>
    window.addEventListener("scroll", () => {
        const nav = document.getElementById("main-nav");
        if (nav === null) return;
        if (window.scrollY > 20) {
            nav.classList.add("scrolled");
        } else {
            nav.classList.remove("scrolled");
        }
    });

    const currentPath = window.location.pathname;
    switch (currentPath) {
        case "/":
            const iniciLinks = document.querySelectorAll(".inici");
            iniciLinks.forEach((link) => link.classList.add("selected"));
            break;
        case "/art/":
        case "/art":
            const artLinks = document.querySelectorAll(".art");
            artLinks.forEach((link) => link.classList.add("selected"));
            break;
        default:
            break;
    }

    const mobileMenuButton = document.querySelector("button.mobileOnly");
    const mobileMenu = document.querySelector("ul.mobile-menu");
    if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener("click", () => {
            mobileMenu.classList.toggle("open");
            mobileMenuButton.classList.toggle("open");
        });
    }

    const themeSwitcher = document.querySelector(".switcher");
    if (themeSwitcher) {
        themeSwitcher.addEventListener("change", () => {
            document.body.classList.toggle("dark-mode");
            localStorage.setItem(
                "theme",
                document.body.classList.contains("dark-mode")
                    ? "dark"
                    : "light",
            );
        });
    }
</script>
