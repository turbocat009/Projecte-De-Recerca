---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import ClientRouter from "astro/components/ClientRouter.astro";

import "@fontsource-variable/montserrat";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/svg/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={Astro.props.description} />
		<title>{Astro.props.title}</title>
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		font-family: aktiv-grotesk-extended, "Montserrat Variable", sans-serif;
		margin: 0;
		width: 100%;
		min-height: 200vh;
		display: flex;
		flex-direction: column;
		overscroll-behavior: none;
	}

	body::before {
		content: "";
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		z-index: -1;
		background: radial-gradient(
				circle at 60% 40%,
				rgb(255, 205, 134) 0%,   /* soft orange */
				rgb(227, 242, 253) 80%  /* light blue */
			),
			linear-gradient(120deg, #ffffffaa 0%, #90caf988 100%); /* white to blue */
		filter: blur(60px) brightness(0.9) saturate(1.3);
		opacity: 0.8;
		border-radius: 16px;
		pointer-events: none;
		animation: pulse ease-in-out 20s infinite alternate;
	}

	@keyframes pulse {
		0% {
			transform: scale(1);
		}
		25% {
			transform: scale(1.2) translateY(-10px) rotate(-5deg);
		}
		75% {
			transform: scale(0.7) translateY(10px) rotate(5deg);
		}
		100% {
			transform: scale(1) translateY(0) rotate(0deg);
		}
	}

	@media (prefers-color-scheme: dark) {
		body {
			background-color: rgb(5, 6, 45);
			color: #e0e0e0;
		}
		body::before {
			content: "";
			position: fixed;
			top: 0;
			left: 0;
			width: 100vw;
			height: 100vh;
			z-index: -1;
			background: radial-gradient(
					circle at 60% 40%,
					#007bff55 0%,
					#121212 80%
				),
				linear-gradient(120deg, #0d47a1aa 0%, #8e24aa88 100%);
			filter: blur(60px) brightness(0.7) saturate(1.5);
			opacity: 0.8;
			pointer-events: none;
			animation: pulse ease-in-out 20s infinite alternate;
		}
	}

	@media (max-width: 768px) {
		main {
			margin-top: 100px;
		}
	}
</style>
